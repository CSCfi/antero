<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}/}spring.log}"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />
    <springProperty scope="system" name="LOG_FILE_ANALYTICS" source="oiva.analytics.logging.file.name" />
    <springProperty scope="system" name="LOG_FILE_PATH_ANALYTICS" source="oiva.analytics.logging.file.path" />

    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxFileSize>500MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>15GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <timestamp key="timestamp" datePattern="yyyy-MM-dd'_'HH-mm-ss.SSS"/>
    <appender name="ROLLING_CSV" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_PATH_ANALYTICS}${LOG_FILE_ANALYTICS}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE_PATH_ANALYTICS}%d{yyyy-MM-dd}.%i-${LOG_FILE_ANALYTICS}</fileNamePattern>
            <maxFileSize>500MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>15GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="fi.csc.antero.log.LogFileHeaderPatternLayout">
                <header>timestamp,ip,api_params,path,duration</header>
                <pattern>${timestamp},%msg%n</pattern>
            </layout>
        </encoder>
    </appender>
    <logger name="fi.csc.antero.log.AnalyticsLogger" level="INFO">
        <appender-ref ref="ROLLING_CSV" />
    </logger>
    <root level="INFO">
        <appender-ref ref="ROLLING"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>